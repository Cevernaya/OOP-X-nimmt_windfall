<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/index.css' />
  </head>
  <body>
    <header>
      <h1>OOP_x_nimmt</h1>
    </header>
    <span class="currentPlayer">Now Playing : <%= playerNum %></span>
    <form class="inputForm" action="/join" method="POST">
      <% if(playerNum == 0) { %>
      <input class="input inputTotalPlayer" type="number" min="2" max="6" value="2" name="totalPlayer"/>
      <% } %>
      <input class="input inputPlayerName" type="text" name="playerName"/>
      <input class="inputBtn" type="submit"/>
    </form>
  </body>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script>
    $(function () {
      var socket = io()
      $('.inputBtn').click(function(e) {
        e.preventDefault()
        socket.emit('refresh')
        document.querySelector(".inputForm").submit()
        return false
      })
      socket.on('refresh', function(){
        location.reload()
      })
    })
  </script>
</html>
